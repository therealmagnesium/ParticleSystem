ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../bin/Debug-linux/Application
  TARGET = $(TARGETDIR)/Application
  OBJDIR = ../build/Debug-linux/Application
  DEFINES += -DDEBUG
  INCLUDES += -I../Engine/source
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../bin/Debug-linux/Engine/libEngine.a -lsfml-graphics -lsfml-window -lsfml-system
  LDDEPS += ../bin/Debug-linux/Engine/libEngine.a
  ALL_LDFLAGS += $(LDFLAGS) -L../bin/Debug-linux/Engine -L/usr/lib64 -m64
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
	@echo Running postbuild commands
	cp -r assets/ ../bin/Debug-linux/Application
  endef
all: prebuild prelink $(TARGET)
	@:

endif

